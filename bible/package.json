{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bible",
  "title": "Lookup Bible Verses",
  "description": "Quickly lookup and copy Bible verses",
  "icon": "command-icon.png",
  "author": "canac",
  "license": "MIT",
  "commands": [
    {
      "name": "lookup",
      "title": "Lookup Bible Verse",
      "description": "Lookup a Bible verse using BibleGateway",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "cheerio": "^1.0.0-rc.10",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/node-fetch": "^2.6.1",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
