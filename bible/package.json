{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bible",
  "title": "Lookup Bible verses",
  "description": "Quickly lookup and copy Bible verses",
  "icon": "command-icon.png",
  "author": "canac",
  "license": "MIT",
  "commands": [
    {
      "name": "lookup",
      "title": "Lookup Bible verse",
      "description": "Lookup a Bible verse using BibleGateway",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.28.0",
    "cheerio": "^1.0.0-rc.10",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "^17.0.17",
    "@types/node-fetch": "^2.6.1",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.23.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
